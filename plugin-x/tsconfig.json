{
    "compilerOptions": {
        // ソースマップを有効化
        "sourceMap": true,
        // TSはECMAScript 5に変換
        "target": "ES5",
        // TSのモジュールはES Modulesとして出力
        "module": "ES2015",
        // 厳密モードとして設定
        "strict": true,
        "jsx": "react",
        "rootDir": "./react/src",
        "outDir": "./react/dist",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    }
}